<extension name="play_video_local_stream">
  <condition field="destination_number" expression="^6050$">
    <action application="answer"/>  
    <action application="playback" data="local_stream://video"/>
  </condition>
</extension>

<extension name="play_video_2">
  <condition field="destination_number" expression="^6051$">
    <action application="answer"/>  
    <action application="playback" data="/usr/local/freeswitch/sounds/music/video/lipsync.mp4"/>
  </condition>
</extension>

<extension name="play_video_3">
  <condition field="destination_number" expression="^6052$">
    <action application="set" data="absolute_codec_string=OPUS,G722,PCMU,VP8"/>
